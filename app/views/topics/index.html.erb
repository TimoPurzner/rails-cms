<h1 class="text-6xl text-white">Topics</h1>



<%= link_to 'New Topic', new_topic_path, class: "button text-4xl" %>

    <% @topics.each do |topic| %>

        <div class="max-w-screen-sm w-full lg:max-w-full lg:flex">
          
        </div>

        <%= link_to 'Show', topic %>
        <%= link_to 'Edit', edit_topic_path(topic) %>
        <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Es werden alle erstellten Einträge gelöscht. Sind Sie sicher?' } %>
      
    <% end %>

<br>


