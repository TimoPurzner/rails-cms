<h1 class="text-4xl text-white light:text-black">Topics</h1>

<%= link_to 'Neues Topic erstellen', new_topic_path, class: "button text-2xl" %>

<div class="flex flex-col sm:flex-row">
    <% @topics.each do |topic| %>
        <%= link_to topic, class: "block min-w-25p" do %>
            <div class="flex flex-col mt-4 mr-4 p-5   rounded-lg
             bg-dark-fill shadow-md light:shadow-mdLight 
             transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-103">
            
                <h4 class="text-2xl mb-0 font-bold text-dark-secondary"> <%= topic.title%> </h4>
                <h4 class="text-xl text-gray-700"> Markdown </h4>

                <div class="mt-8 self-end">
                    <object>
                        <%= link_to edit_topic_path(topic) do %>
                            <i class="fas fa-edit text-2xl mr-4"></i>
                        <% end %>
                        <%= link_to topic, method: :delete, data: { confirm: 'Es werden alle erstellten Einträge gelöscht. Sind Sie sicher?' } do %>
                            <i class="fas fa-trash text-2xl"></i>
                        <% end %>
                    </object>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
