
<div class="w-full h-screen flex items-start mt-6 lg:mt-0 lg:items-center content-start xl:content-center justify-center">
  <div class="p-6 bg-dark-primary light:bg-light-primary w-11/12 lg:max-w-xl rounded lg:mb-64">
    <h2 class="text-2xl text-center">Anmeldung</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field w-full mt-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",
            class: "bg-white light:bg-light-secondary text-dark-inputtext light:text-light-inputtext appearance-none outline-none focus:shadow-outline border rounded-lg py-2 px-4 block w-full" %>
      </div>
      <div class="field mt-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Passwort",
          class: "bg-white light:bg-light-secondary text-dark-inputtext light:text-light-inputtext appearance-none outline-none focus:shadow-outline border rounded-lg py-2 px-4 block w-full"
        %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex content-center mt-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Anmelden", class: "button bg-dark-secondary"  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
